<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/padding_vertical_small"
        android:paddingBottom="@dimen/padding_vertical_small">

        <CustomComponents.TextView
            android:id="@+id/textProduct"
            style="@style/AppTheme.TextViewH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonProduct"
            android:layout_toStartOf="@+id/buttonProduct"
            tools:text="Produk Terbaru" />

        <CustomComponents.Button
            android:id="@+id/buttonProduct"
            style="@style/AppTheme.Button.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_small"
            android:text="Lihat Semua"
            tools:text="lihat semua" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description"
            android:transitionName="@string/product_transition"/>

        <ImageView
            android:id="@+id/wishlist"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|top"
            android:layout_margin="@dimen/margin_small"
            android:contentDescription="@string/content_description"
            android:src="@drawable/heart_unavailable" />

        <CustomComponents.TextView
            android:id="@+id/discountPercent"
            style="@style/AppTheme.TextViewH7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/background_small_grey"
            android:paddingBottom="@dimen/padding_vertical_xxsmall"
            android:paddingLeft="@dimen/padding_horizontal_xsmall"
            android:paddingRight="@dimen/padding_horizontal_xsmall"
            android:paddingTop="@dimen/padding_vertical_xxsmall" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">


        <CustomComponents.Button
            android:id="@+id/shopNow"
            style="@style/AppTheme.Button.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_small"
            android:textAllCaps="true"
            android:text="Shop Now"
            tools:text="lihat semua" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/shopNow"
            android:layout_toStartOf="@+id/shopNow"
            android:orientation="vertical">

            <CustomComponents.TextView
                android:id="@+id/name"
                style="@style/AppTheme.TextViewH4"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:maxLines="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/margin_vertical_small"
                android:layout_marginBottom="@dimen/margin_vertical_small"
                android:orientation="horizontal">

                <CustomComponents.TextViewSemiBold
                    android:id="@+id/realPrice"
                    style="@style/AppTheme.TextViewH4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <CustomComponents.TextView
                    android:id="@+id/beforeDiscPrice"
                    style="@style/AppTheme.TextViewH6.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>