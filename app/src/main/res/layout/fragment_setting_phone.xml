<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_horizontal_normal"
        android:paddingLeft="@dimen/padding_horizontal_normal"
        android:paddingTop="@dimen/padding_vertical_large"
        android:paddingBottom="@dimen/padding_vertical_large">

        <CustomComponents.TextViewSemiBold
            style="@style/AppTheme.TextViewH1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Masukkan nomer telepon"
            android:layout_marginBottom="@dimen/margin_vertical_small"/>

        <CustomComponents.TextView
            style="@style/AppTheme.TextViewH4.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Kamu akan menerima kode autentikasi setelah memasukkan nomer teleponmu" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/margin_horizontal_normal"
        android:layout_marginRight="@dimen/margin_horizontal_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CustomComponents.TextView
                android:id="@+id/countryCode"
                style="@style/AppTheme.TextViewH3.Grey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/padding_horizontal_normal"
                android:paddingLeft="@dimen/padding_horizontal_normal"
                android:gravity="center"
                android:text="+62" />

            <CustomComponents.EditText
                android:id="@+id/phoneNumber"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:textAppearance="@style/AppTheme.TextViewH3.Grey"
                android:maxLength="11"
                android:hint="Nomer Telepon" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <CustomComponents.Button
        android:id="@+id/submit"
        style="@style/AppTheme.Button.Primary"
        android:layout_margin="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:text="Verifikasi"
        android:textAllCaps="true"
        android:textAppearance="@style/AppTheme.TextViewH3.Light" />

</LinearLayout>
