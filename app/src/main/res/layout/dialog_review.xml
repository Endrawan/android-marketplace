<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_vertical_normal"
    android:paddingTop="@dimen/padding_vertical_normal">

    <CustomComponents.TextView
        android:id="@+id/title"
        style="@style/AppTheme.TextViewH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_xsmall"
        android:gravity="center_horizontal"
        android:text="Tulis Ulasan" />

    <CustomComponents.TextView
        android:id="@+id/subtitle"
        style="@style/AppTheme.TextViewH3.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Tolong berikan bintang dan ulasan anda dibawah" />

    <include
        android:id="@+id/rating"
        layout="@layout/view_rating"/>

    <CustomComponents.EditText
        android:id="@+id/review"
        style="@style/AppTheme.EditText"
        android:layout_width="256dp"
        android:layout_height="144dp"
        android:layout_marginBottom="@dimen/margin_vertical_small"
        android:layout_marginTop="@dimen/margin_vertical_small"
        android:background="@drawable/background_small_grey"
        android:gravity="start|top"
        android:padding="@dimen/padding_small"
        android:textAppearance="@style/AppTheme.TextViewH3"
        android:hint="Pendapat anda..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <CustomComponents.Button
            android:id="@+id/cancel"
            style="@style/AppTheme.Button.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textAppearance="@style/AppTheme.TextViewH4.Primary" />

        <View
            android:layout_width="@dimen/padding_small"
            android:layout_height="match_parent" />

        <CustomComponents.Button
            android:id="@+id/submit"
            style="@style/AppTheme.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="Submit"
            android:textAllCaps="true"
            android:textAppearance="@style/AppTheme.TextViewH4.Light" />

    </LinearLayout>
</LinearLayout>