<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/tabImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:contentDescription="@string/content_description"
            android:tint="@color/cBorderBottom"
            tools:src="@drawable/shipping" />
        <ImageView
            android:id="@+id/tabIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top|end"
            android:contentDescription="@string/content_description"
            android:visibility="invisible"
            android:src="@drawable/checked"/>
    </FrameLayout>

    <CustomComponents.TextView
        android:id="@+id/tabName"
        style="@style/AppTheme.TextViewH4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vertical_xxsmall"
        android:gravity="center"
        android:textColor="@color/cBorderBottom"
        tools:name="Shipping" />

</LinearLayout>