<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cBackgroundGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_horizontal_small"
            android:paddingLeft="@dimen/margin_horizontal_small"
            android:paddingRight="@dimen/margin_horizontal_small"
            android:paddingTop="@dimen/padding_horizontal_small">

            <CustomComponents.TextView
                android:id="@+id/nameProduct"
                style="@style/AppTheme.TextViewH4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Aashish Fabrics Cotton Regular Tops" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_vertical_xsmall" />

            <CustomComponents.TextViewSemiBold
                android:id="@+id/priceProduct"
                style="@style/AppTheme.CurrencyTV.H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rp 20.000,-" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>