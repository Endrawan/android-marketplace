<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CustomComponents.TextView
        android:id="@+id/title"
        style="@style/AppTheme.TextViewH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cBackgroundGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/falsePanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_vertical_large"
            android:paddingLeft="@dimen/padding_horizontal_normal"
            android:paddingRight="@dimen/padding_horizontal_normal"
            android:paddingTop="@dimen/padding_vertical_large">

            <ImageView
                android:id="@+id/falseImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/content_description" />

            <CustomComponents.TextViewSemiBold
                android:id="@+id/falseText"
                style="@style/AppTheme.TextViewH3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_normal"
                android:gravity="center_horizontal"
                android:maxLines="2" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/cBackgroundGrey" />

        <LinearLayout
            android:id="@+id/truePanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_vertical_large"
            android:paddingLeft="@dimen/padding_horizontal_normal"
            android:paddingRight="@dimen/padding_horizontal_normal"
            android:paddingTop="@dimen/padding_vertical_large">

            <ImageView
                android:id="@+id/trueImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/content_description" />

            <CustomComponents.TextViewSemiBold
                android:id="@+id/trueText"
                style="@style/AppTheme.TextViewH3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_normal"
                android:gravity="center_horizontal"
                android:maxLines="2" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>