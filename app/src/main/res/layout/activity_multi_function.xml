<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cWhite"
    tools:context=".activities.MultiFunctionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/cWhite"
        android:theme="@style/AppTheme.ToolbarLikeDialog">

        <CustomComponents.TextView
            android:id="@+id/title"
            style="@style/AppTheme.TextView.Toolbar"
            android:textAppearance="@style/AppTheme.TextViewH3"/>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/multiFunctionContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" />

</RelativeLayout>
